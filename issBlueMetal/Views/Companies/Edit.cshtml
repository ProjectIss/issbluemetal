@model issBlueMetal.Models.Company

@{
    ViewBag.Title = "Edit";
}

<style>
    label {
        font-size: 17px;
        font-weight: 400;
        color: #a53394 !important;
    }

    input[type=text]:not(.browser-default) {
        width: 90%;
    }

        input[type=text]:not(.browser-default):hover {
            color: none;
        }

    .btn {
        background-color: #ff5252 !important;
    }
</style>

<div class="breadcrumbs-inline pt-3 pb-1" id="breadcrumbs-wrapper">
    <div class="container">
        <div class="row">
            <div class="col s10 m6 l6 breadcrumbs-left">
                <h5 class="breadcrumbs-title mt-0 mb-0 display-inline hide-on-small-and-down"><span>Edit Company </span></h5>

                <ol class="breadcrumbs mb-0">
                    <li class="breadcrumb-item">
                        <a href="~/Companies/Index">Index</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Edit</a>
                    </li>

                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col s12">
        <div class="card card-tabs" >
            <div class="card-content" style="margin:20px">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="header-elements">
                        <div class="list-icons" style="text-align:right">
                            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
                        </div>
                    </div>


                    <div class="row">
                        <div class="row">

                            <div class="form-group">

                                <div class="input-field col s4">
                                    <label for="icon_prefix3">Name</label><br />
                                    <div class="form-control input-field">
                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control",  } })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="input-field col s4">
                                    <label for="icon_prefix3">Address</label><br />
                                    <div class="form-control input-field">
                                        @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control", } })
                                        @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="input-field col s4">
                                    <label for="icon_prefix3">Cell No</label><br />
                                    <div class="form-control input-field">
                                        @Html.EditorFor(model => model.cellNo, new { htmlAttributes = new { @class = "form-control",  } })
                                        @Html.ValidationMessageFor(model => model.cellNo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                        </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 input-field col s4">
                                    <input type="submit" value="SUBMIT" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                        }

                    </div>
                </div>
    </div>
</div>

