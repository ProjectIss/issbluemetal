@model IEnumerable<issBlueMetal.Models.Location>

@{
    ViewBag.Title = "Index";
}

<style>
    .dataTables_wrapper {
        position: relative;
        clear: both;
        padding: 2% !important;
    }

    label {
        font-size: 16px;
        color: #a53394;
        font-weight: bold !important;
    }

    input[type=search]:not(.browser-default) {
        height: 17px;
    }

    h3 {
        font-size: 15px;
        text-align: center;
        color: #a53394;
        font-weight: bold !important;
    }

</style>

<link href="//cdn.datatables.net/1.10.15/css/jquery.dataTables.min.css" rel="stylesheet" />
<div class="breadcrumbs-inline pt-3 pb-1" id="breadcrumbs-wrapper">
    <div class="container">
        <div class="row">
            <div class="col s10 m6 l6 breadcrumbs-left">
                <h5 class="breadcrumbs-title mt-0 mb-0 display-inline hide-on-small-and-down"><span>Location</span></h5>

                <ol class="breadcrumbs mb-0">
                    <li class="breadcrumb-item">
                        <a href="~/Home/Index">Dashboard(Master)</a>

                    </li>
                    <li class="breadcrumb-item">
                        <a> Location Index</a>
                    </li>

                </ol>
            </div>

        </div>
    </div>
</div>

<div class="col s12">
    <div class="container">
        <div class="section">
            <div class="container">
                <div class="card">

                    <div class="card-tabs">
                        <table class="display" id="tblItems">
                            <thead>
                                <tr>
                                    <th>
                                        <h3 class="card-title">Location ID</h3>

                                    </th>
                                    <th>
                                        <h3 class="card-title">Location Name</h3>

                                    </th>
                                    <th><h3 class="card-title">Actions</h3></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="text-align:center">
                                            @Html.DisplayFor(modelItem => item.id)
                                        </td>
                                        <td style="text-align:center">
                                            @Html.DisplayFor(modelItem => item.name)
                                        </td>
                                        <td style="text-align:center">
                                            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                                            @Html.ActionLink("Details", "Details", new { id = item.id }) |
                                            @Html.ActionLink("Delete", "Delete", new { id = item.id })
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $("#tblItems").DataTable();

    });

</script>