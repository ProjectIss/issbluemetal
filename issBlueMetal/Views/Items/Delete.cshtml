@model issBlueMetal.Models.Item

@{
    ViewBag.Title = "Delete";
}

<div class="breadcrumbs-inline pt-3 pb-1" id="breadcrumbs-wrapper">
    <div class="container">
        <div class="row">
            <div class="col s10 m6 l6 breadcrumbs-left">
                <h5 class="breadcrumbs-title mt-0 mb-0 display-inline hide-on-small-and-down"><span>Customer Delete</span></h5>

                <ol class="breadcrumbs mb-0">
                    <li class="breadcrumb-item">
                        <a href="~/Items/Index">Index</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Delete</a>
                    </li>

                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col s12">
        <div class="card card-tabs">
            <div class="card-content">
               
                   
                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Name</label>:
                            <div class="col-lg-2">
                                @Html.DisplayFor(model => model.name)
                            </div>
                        </div>
                       
                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">UOM</label>:
                            <div class="col-lg-2">
                                @Html.DisplayFor(model => model.uom)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Purchase Prize</label>:
                            <div class="col-lg-2">
                                @Html.DisplayFor(model => model.purchasePrize)
                            </div>
                        </div>

                   

                        <div class="form-group row">
                            <label class="col-lg-2 font-weight-bold">Sales Prize</label>:
                            <div class="col-lg-2">
                                @Html.DisplayFor(model => model.salcePrize)
                            </div>
                        </div>
                    
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color"style="text-align:center">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>

