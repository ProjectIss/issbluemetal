@model issBlueMetal.Models.Staff

@{
    ViewBag.Title = "Create";
}
<style>
    label {
        font-size: 19px;
        font-weight: bold;
        color: #a53394 !important;
    }

    input[type=text]:not(.browser-default) {
        width: 100%;
    }

    .btn {
        background-color: #ff5252 !important;
    }
</style>

<div class="breadcrumbs-inline pt-3 pb-1" id="breadcrumbs-wrapper">
    <div class="container">
        <div class="row">
            <div class="col s10 m6 l6 breadcrumbs-left">
                <h5 class="breadcrumbs-title mt-0 mb-0 display-inline hide-on-small-and-down"><span>Staff Create</span></h5>

                <ol class="breadcrumbs mb-0">
                    <li class="breadcrumb-item">
                        <a href="~/Staffs/Index">Index</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Create</a>
                    </li>

                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col s12">
        <div class="card card-tabs">
            <div class="card-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="header-elements">
                        <div class="list-icons" style="text-align:right">
                            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
                        </div>
                    </div>
                    <div class="row">

                        <div class="form-group">

                            <div class="input-field col s3">
                                <label for="icon_prefix3">Name</label>&nbsp;
                                <div class="form-control input-field">
                                    @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", } })
                                    @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            </div>
                        <div class="form-group">

                            <div class="input-field col s3">
                                <label for="icon_prefix3">Address</label>&nbsp;
                                <div class="form-control input-field">
                                    @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control", } })
                                    @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                            <div class="form-group">

                                <div class="input-field col s3">
                                    <label for="icon_prefix3">Cell No</label>&nbsp;
                                    <div class="form-control input-field">
                                        @Html.EditorFor(model => model.cellNo, new { htmlAttributes = new { @class = "form-control", } })
                                        @Html.ValidationMessageFor(model => model.cellNo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="input-field col s3">
                                    <label for="icon_prefix3">Licence No</label>&nbsp;
                                    <div class="form-control input-field">
                                        @Html.EditorFor(model => model.licenceNo, new { htmlAttributes = new { @class = "form-control", } })
                                        @Html.ValidationMessageFor(model => model.licenceNo, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                   

                        <div class="form-group">

                            <div class="input-field col s3">
                                <label for="icon_prefix3">Badge No</label>&nbsp;
                                <div class="form-control input-field">
                                    @Html.EditorFor(model => model.badgeno, new { htmlAttributes = new { @class = "form-control", } })
                                    @Html.ValidationMessageFor(model => model.badgeno, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="input-field col s3">
                                <label for="icon_prefix3">Licence Ex Date</label>&nbsp;
                                <div class="form-control input-field">
                                    @Html.TextBoxFor(m => m.licenceExDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="input-field col s3">
                                <label for="icon_prefix3">Salary</label>&nbsp;
                                <div class="form-control input-field">
                                    @Html.EditorFor(model => model.salary, new { htmlAttributes = new { @class = "form-control", } })
                                    @Html.ValidationMessageFor(model => model.salary, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">

                            <div class="input-field col s3">
                                <label for="icon_prefix3">Salary Type</label>&nbsp;
                                <div class="form-control input-field">
                                    @Html.EditorFor(model => model.salaryType, new { htmlAttributes = new { @class = "form-control", } })
                                    @Html.ValidationMessageFor(model => model.salaryType, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 input-field col s3">
                                <input type="submit" value="Submit" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                            }

                 </div>
            </div>
    </div>
</div>
