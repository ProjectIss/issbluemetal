@model issBlueMetal.Models.User

@{
    ViewBag.Title = "Create";
}
<style>
    label {
        font-size: 19px;
        font-weight: bold;
        color: #a53394 !important;
    }

    input[type=text]:not(.browser-default) {
        width: 75%;
    }

    .btn {
        background-color: #ff5252 !important;
    }
</style>

<div class="breadcrumbs-inline pt-3 pb-1" id="breadcrumbs-wrapper">
    <div class="container">
        <div class="row">
            <div class="col s10 m6 l6 breadcrumbs-left">
                <h5 class="breadcrumbs-title mt-0 mb-0 display-inline hide-on-small-and-down"><span>Create User </span></h5>

                <ol class="breadcrumbs mb-0">
                    <li class="breadcrumb-item">
                        <a href="~/Users/Index">Index</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Create</a>
                    </li>

                </ol>
            </div>

        </div>
    </div>
</div>
<div class="row">
    <div class="col s12">
        <div class="card card-tabs">
            <div class="card-content">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="header-elements">
                        <div class="list-icons" style="text-align:right">
                            @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="row">
                            <div class="form-group">
                                <div class="input-field col s4">
                                    <i class="material-icons prefix">account_circle</i><br />
                                    @Html.DropDownList("companyId", null, htmlAttributes: new { @class = "form-control" })
                                    <label for="icon_prefix3"> Company</label><br />
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="input-field col s4">
                                    <label for="icon_prefix3">Name</label><br />
                                    <div class="form-control input-field">
                                        @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control", } })
                                        @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="input-field col s4">
                                    <label for="icon_prefix3">User Name</label><br />
                                    <div class="form-control input-field">
                                        @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control", } })
                                        @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">

                                <div class="input-field col s4">
                                    <label for="icon_prefix3">Password</label><br />
                                    <div class="form-control input-field">
                                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", } })
                                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">

                                <div class="input-field col s4">
                                    <div class="form-control input-field">
                                        <br />
                                        @Html.DropDownList("role",new List<SelectListItem> {
                                        new SelectListItem{ Text="Admin", Value="Admin"},
                                 new SelectListItem{ Text="Manager", Value="Manager"},
                           new SelectListItem{ Text="Employee", Value="Employee"},
                                   })
                                        @*@Html.EditorFor(model => model.role, new { htmlAttributes = new { @class = "form-control", @placeholder = "Role" } })
                    @Html.ValidationMessageFor(model => model.role, "", new { @class = "text-danger" })*@
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="input-field col s4">
                                    <label for="icon_prefix3">Status</label><br />
                                    <div class="form-control input-field">
                                        @Html.DropDownList("status", new List<SelectListItem>
                                         {
new SelectListItem{ Text="Active", Value="Active"},
new SelectListItem{ Text="InActive", Value="InActive"},
}, "--- Select ---", new { @class = "js-example-basic-single" })
                                        @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">

                                <div class="input-field col s4">
                                    <label for="icon_prefix3">Last Login</label><br />
                                    <div class="form-control input-field">
                                        @Html.TextBoxFor(m => m.lastLogin, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 input-field col s4">
                                <input type="submit" value="Submit" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
