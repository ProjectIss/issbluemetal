@model issBlueMetal.Models.Sales

@{
    ViewBag.Title = "Details";
}



<div class="breadcrumbs-inline pt-3 pb-1" id="breadcrumbs-wrapper">
    <div class="container">
        <div class="row">
            <div class="col s10 m6 l6 breadcrumbs-left">
                <h5 class="breadcrumbs-title mt-0 mb-0 display-inline hide-on-small-and-down"><span>Sales Details</span></h5>

                <ol class="breadcrumbs mb-0">
                    <li class="breadcrumb-item">
                        <a href="~/Sales/Index">Index</a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="#">Details</a>
                    </li>

                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col s12">
        <div class="card card-tabs">
            <div class="card-content">

                <table>
                    <tr>
                        <th style="width: 15%"><label class="col-lg-2 font-weight-bold">Customer</label></th>
                        <th>   @Html.DisplayFor(model => model.customer.name)</th>
</tr>
                    <tr>
                        <th><label class="col-lg-2 font-weight-bold">Delivery Place</label></th>
                        <th>   @Html.DisplayFor(model => model.deliveryPlace)</th>
</tr>
                    <tr>
                        <th><label class="col-lg-2 font-weight-bold">Driver</label></th>
                        <th>  @Html.DisplayFor(model => model.driver)</th>
</tr>
                    <tr>
                        <th><label class="col-lg-2 font-weight-bold">Vehicle No</label></th>
                        <th>@Html.DisplayFor(model => model.vehicle)</th>
</tr>
                    <tr>
                        <th><label class="col-lg-2 font-weight-bold">Bill No</label></th>
                        <th>@Html.DisplayFor(model => model.billNo)</th>
</tr>
                    <tr>
                        <th>   <label class="col-lg-2 font-weight-bold">Date</label></th>
                        <th>   @Html.DisplayFor(model => model.Date)</th>
</tr>
                    <tr>
                        <th>   <label class="col-lg-2 font-weight-bold">Type</label></th>
                        <th>   @Html.DisplayFor(model => model.type)</th>
</tr>
                    <tr>
                        <th>   <label class="col-lg-2 font-weight-bold">Material Id</label></th>
                        <th>@Html.DisplayFor(model => model.itemId)</th>
</tr>
                    <tr>
                        <th><label class="col-lg-2 font-weight-bold">Address</label></th>
                        <th>   @Html.DisplayFor(model => model.address)</th>
</tr>
                    <tr>
                        <th><label class="col-lg-2 font-weight-bold">Phone No</label></th>
                        <th>    @Html.DisplayFor(model => model.phoneNo)</th>
</tr>
                    <tr>
                        <th><label class="col-lg-2 font-weight-bold">No Of Unit</label></th>
                        <th>   @Html.DisplayFor(model => model.noOfUnit)</th>
</tr>
                    <tr>
                        <th><label class="col-lg-2 font-weight-bold">Rate Per Unit</label></th>
                        <th>  @Html.DisplayFor(model => model.ratePerUnit)</th>
</tr>
                    <tr>
                        <th>  <label class="col-lg-2 font-weight-bold">Driver Salary</label></th>
                        <th>  @Html.DisplayFor(model => model.driverSalary)</th>
</tr>
                    <tr>
                        <th><label class="col-lg-2 font-weight-bold">Rent Amount</label></th>
                        <th> @Html.DisplayFor(model => model.rentAmount)</th>
</tr>
                    <tr>
                        <th>
                            <label class="col-lg-2 font-weight-bold">Net Amount</label>
                        </th>
                        <th>@Html.DisplayFor(model => model.netAmount)</th>
                    </tr>
                    <tr>
                        <th>
                            <label class="col-lg-2 font-weight-bold">
                                GST Rate
                            </label>
                        </th>
                        <th>@Html.DisplayFor(model => model.advanceAmount)</th>
                    </tr>
                    <tr>
                        <th>
                            <label class="col-lg-2 font-weight-bold">Paid Amount</label>
                        </th>
                        <th>@Html.DisplayFor(model => model.paidAmount)</th>
                    </tr>
                    <tr>
                        <th> <label class="col-lg-2 font-weight-bold">Balance Amount</label></th>
                      <th>  @Html.DisplayFor(model => model.balanceAmount)</th>
                    </tr>
                   
                </table>
            </div>
            <div class="header-elements">
                <div class="list-icons" style="text-align:right">
                    @Html.ActionLink("Back to List", "Index", null, htmlAttributes: new { @class = "btn btn-primary" })
                    @Html.ActionLink("Edit", "Edit", new { Id = Model.Id }, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    </div>
</div>
